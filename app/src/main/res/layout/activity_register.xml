<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgorange"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    tools:context="com.example.abyandafa.playobook.RegisterActivity">


    <ImageView
        android:id="@+id/icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logowhite"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/color_white"
                android:theme="@style/MyEditText"
                app:passwordToggleEnabled="false"
                app:passwordToggleTint="@color/textSecondary">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/name"
                    android:textColorHint="@color/color_white"
                    android:textColor="@color/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_person_register"
                    android:drawableStart="@mipmap/ic_person_register"
                    android:hint="Full Name"
                    android:inputType="textEmailAddress"
                    android:maxLength="20"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/color_white"
                android:theme="@style/MyEditText"
                app:passwordToggleEnabled="false"
                app:passwordToggleTint="@color/textSecondary">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/date"
                    android:textColor="@color/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_date_register"
                    android:drawableStart="@mipmap/ic_date_register"
                    android:hint="Birth Date"
                    android:inputType="date"
                    android:maxLength="20"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/color_white"
                android:theme="@style/MyEditText"
                app:passwordToggleEnabled="false"
                app:passwordToggleTint="@color/color_white">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/phone"
                    android:textColor="@color/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_phone_register"
                    android:drawableStart="@mipmap/ic_phone_register"
                    android:hint="Phone Number"
                    android:inputType="text"
                    android:digits="0123456789"
                    android:maxLength="20"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/color_white"
                android:theme="@style/MyEditText">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:drawableLeft="@mipmap/ic_mail"
                    android:drawableStart="@mipmap/ic_mail"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLength="20"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/color_white"
                android:theme="@style/MyEditText"
                app:passwordToggleEnabled="false"
                app:passwordToggleTint="@color/textSecondary">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/password"
                    android:textColor="@color/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_pass_login"
                    android:drawableStart="@mipmap/ic_pass_login"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="20"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_white"
                android:text="Register"
                android:textColor="@color/background_login" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
